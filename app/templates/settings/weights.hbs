{{#ratchet-modal title="Set a weight"}}
	<form {{action "add" newValue on="submit"}} class="content-padded">
		{{input value=newValue type="number" placeholder="Add a new weight" min=minValue max=maxValue}}
		{{#if isValid}}
			{{input type="submit" classNames="btn btn-block btn-positive" value="Add new weight"}}
		{{/if}}
	</form>
	{{#if values}}
		<ul class="table-view">
			{{#each value in values}}
			<li class="table-view-cell">
				<a {{action "set" value}} href="#">
					{{value}} {{unit}}
				</a>
				{{#ratchet-button type="link" data-value=value on-click="remove"}}
					{{ratchet-icon type="trash"}}
				{{/ratchet-button}}
			</li>
			{{/each}}
		</ul>
	{{/if}}
{{/ratchet-modal}}
