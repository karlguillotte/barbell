{{#ratchet-modal title="Set a percentage"}}
	<form {{action "add" newValue on="submit"}} class="content-padded">
		{{input value=newValue type="number" placeholder="Add a new percentage" min=minValue max=maxValue}}
		{{#if isValid}}
			{{input type="submit" classNames="btn btn-block btn-positive" value="Add new percentage"}}
		{{/if}}
	</form>
	{{#if values}}
		<ul class="table-view">
			{{#each value in values}}
			<li class="table-view-cell">
				<a {{action "set" value}} href="#">
					{{value}}%
				</a>
				{{#ratchet-button type="negative" outlined=true data-value=value on-click="remove"}}
					Remove
				{{/ratchet-button}}
			</li>
			{{/each}}
		</ul>
	{{/if}}
{{/ratchet-modal}}
